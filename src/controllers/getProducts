const { Product, Provider, Tax } = require("../db.js");
const axios = require("axios");

const getProducts = async (req, res) => {
  let allProducts = await Product.findAll({
    include: [
      {
        model: Tax,
        attributes: ["iva"],
      },
      {
        model: Provider,
        attributes: ["nombre"],
        through: {
          attributes: [],
        },
      },
    ],
  });

  res.status(200).json(allProducts);
};
module.exports = getProducts;
